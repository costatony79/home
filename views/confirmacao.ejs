                <th>18</th>
                <th>19</th>
                <th>20</th>
                <th>21</th>
                <th>22</th>
                <th>23</th>
                <th>24</th>
                <th>25</th>
                <th>26</th>
                <th>27</th>
                <th>28</th>
                <th>29</th>
                <th>30</th>

            </thead>
            <tbody>         
                
                <tr>
                    <% respostas.forEach(function(respostas) { %>
                        <td><%= respostas.toUpperCase() %></td>        
                        <% }); %> 
                    </tr>
                    
                    <% 
                let count = 0;
                for (let i = 0; i < respostas.length; i++) {
                    if (respostas[i].toUpperCase() === res[i]) {
                        count++;
                    }
                }
                %>
        </tbody>
    </table>
    </div>

    <div class="container">
        <div class="display-3 text-center">RESULTADO</div>
        <hr>
        <div id="resultado" class="bg-dark text-center text-light display-4">Você fez <%= count %> pontos</div>
    
        <hr>
        <a href="/" class="btn btn-primary btn-block">VOLTAR PARA O ÍNICIO</a>
    </div>


       
</body>
<script src="./js/bootstrap.min.js"></script>
<script src="./js/popper.min.js"></script>
<script src="/js/js.js"></script>   

</html>