<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>GABARITOS DE LÍNGUA PORTUGUESA</title>
</head>
<body>
<hr>
<div class="container">
    <div class="h1 text-center bg-primary text-light">GABARITOS SIMULADO DE LÍNGUA PORTUGUESA</div>
</div>
<hr>
<div class="container">
    <div class="row">
        <div class="col">
            <h3 class="display-6 text-center">PRIMEIRO SIMULADO LÍNGUA PORTUGUESA</h3>            
        </div>
        <div class="row">
            <div class="col">
                <button class="btn btn-warning" id="esconder_primeiro_simulado_lingua_portuguesa">Esconder</button>
            </div>
            <div class="col">
                <button class="btn btn-success" id="mostrar_primeiro_simulado_lingua_portuguesa">Mostrar</button> 
            </div>
        </div>
    </div>    
</div>
<div class="container" id="gab_primeiro_simulado_lingua_portuguesa">
        <table class="table table-dark tabela-container">
            <tr>
                <th>NOME</th>           
                <th>Q1</th>
                <th>Q2</th>
                <th>Q3</th>
                <th>Q4</th>
                <th>Q5</th>
                <th>Q6</th>
                <th>Q7</th>
                <th>Q8</th>
                <th>Q9</th>
                <th>Q10</th>
                <th>Q11</th>
                <th>Q12</th>
                <th>Q13</th>
                <th>Q14</th>
                <th>Q15</th>
                <th>Q16</th>
                <th>Q17</th>
                <th>Q18</th>
                <th>Q19</th>
                <th>Q20</th>
                <th>Q21</th>
                <th>Q22</th>
                <th>acertos</th>
                <th>NOTA</th>
                <th>AÇÃO</th>
            </tr>

               
                <tbody>         
                
                    <% primeiro_simulado.forEach(function(primeiro_simulado) { %>
                         <tr>          
                            <td><%= primeiro_simulado.nome %></td>
                            <td><%= primeiro_simulado.q1 %></td>
                            <td><%= primeiro_simulado.q2 %></td>
                            <td><%= primeiro_simulado.q3 %></td>
                            <td><%= primeiro_simulado.q4 %></td>
                            <td><%= primeiro_simulado.q5 %></td>
                            <td><%= primeiro_simulado.q6 %></td>
                            <td><%= primeiro_simulado.q7 %></td>
                            <td><%= primeiro_simulado.q8 %></td>
                            <td><%= primeiro_simulado.q9 %></td>
                            <td><%= primeiro_simulado.q10 %></td>
                            <td><%= primeiro_simulado.q11 %></td>
                            <td><%= primeiro_simulado.q12 %></td>
                            <td><%= primeiro_simulado.q13 %></td>
                            <td><%= primeiro_simulado.q14 %></td>
                            <td><%= primeiro_simulado.q15 %></td>
                            <td><%= primeiro_simulado.q16 %></td>
                            <td><%= primeiro_simulado.q17 %></td>
                            <td><%= primeiro_simulado.q18 %></td>
                            <td><%= primeiro_simulado.q19 %></td>
                            <td><%= primeiro_simulado.q20 %></td>
                            <td><%= primeiro_simulado.q21 %></td>
                            <td><%= primeiro_simulado.q22 %></td>
                            <td><%= primeiro_simulado.nota_lingua_portuguesa %></td>
                            <td><%= Math.floor(primeiro_simulado.nota_lingua_portuguesa * 100 / 22)/1 %></td>
                            
                            
                            <td class="align-middle">
                                <form method="POST" action="/deletar_simulado_lingua_portuguesa">
                                    <input type="hidden" name="id" value="<%=primeiro_simulado.id%>">
                                    <button class="btn btn-danger">Deletar</button>
                                </form>
                            </td>
                            
                          </tr>
                        <% }); %> 
                    
            </tbody>
           
    </table>

</div>
<br>
<hr>
<hr>
<br>


</body>
<script>
    var gab_primeiro_simulado_lingua_portuguesa = document.getElementById('gab_primeiro_simulado_lingua_portuguesa');
    var btn_esconde_gab_primeiro_simulado_lingua_portuguesa = document.getElementById('esconder_primeiro_simulado_lingua_portuguesa');
    var btn_mostra_gab_primeiro_simulado_lingua_portuguesa = document.getElementById('mostrar_primeiro_simulado_lingua_portuguesa');

   
     
    btn_esconde_gab_primeiro_simulado_lingua_portuguesa.addEventListener('click', function() {
        gab_primeiro_simulado_lingua_portuguesa.style.display = 'none';
    });

    btn_mostra_gab_primeiro_simulado_lingua_portuguesa.addEventListener('click', function() {
        gab_primeiro_simulado_lingua_portuguesa.style.display = 'block';
    });

   


</script>


<script src="./js/bootstrap.min.js"></script>
<script src="./js/popper.min.js"></script>
</html>